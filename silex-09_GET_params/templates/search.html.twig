{% extends '_base.html.twig' %}

{% block title %}one dvd page{% endblock %}

{% block main %}

    <h1>Some nice cakes</h1>
    <h2>(filter: contains %{{ keyword }}%)</h2>

    <ul>
            {% for recipe in recipes %}
                <li>
                    {# ---------- STRONG if contains keyword ------- #}
                    {% if keyword in recipe %}
                        <strong>{{ recipe }}</strong>
                    {% else %}
                        <em>{{ recipe }}</em>
                    {%  endif %}

                </li>
            {% endfor %}
    </ul>

    <hr>
    <h1>Search again ..</h1>
    <form
            method="get"
            action="/search"
            >
        search keyword:
        <input type="text" name="keyword">
        <input type="submit" value="search">
    </form>
    <p>
        enter 'recipe' for ALL, try 'cake' or 'cheese' or 'xmas' to filter search results
    </p>

{% endblock %}
